<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".FriendsActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/baseline_arrow_back_24"
            app:tint="@color/black"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Notifications"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="  Nouvelle demande d'ami !"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView

            android:layout_width="320dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:background="@drawable/box"
            android:drawableLeft="@drawable/profile"
            android:text="Marie Galante"
            android:gravity="center"
            android:textSize="19sp"
            android:drawableRight="@drawable/yesno"
             />

        <Button
            android:id="@+id/button"
            android:layout_width="45dp"
            android:layout_height="47dp"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="x"
            android:foreground="@drawable/x" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:drawableLeft="@drawable/greencercle"
        android:text="   Connectés"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView

            android:layout_width="420dp"
            android:layout_height="85dp"
            android:layout_margin="1dp"
            android:background="@drawable/box2"
            android:drawableLeft="@drawable/profile2"
            android:text="Bertrand Sport"
            android:padding="25dp"
            android:gravity="center"
            android:textSize="19sp"
            android:drawableRight="@drawable/message"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView

            android:layout_width="420dp"
            android:layout_height="85dp"
            android:layout_margin="1dp"
            android:background="@drawable/box2"
            android:drawableLeft="@drawable/profile3"
            android:text="Phillipé Tank"
            android:padding="25dp"
            android:gravity="center"
            android:textSize="19sp"
            android:drawableRight="@drawable/message"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="  Invitations"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView

            android:layout_width="370dp"
            android:layout_height="90dp"
            android:layout_margin="1dp"
            android:background="@drawable/box2"
            android:text="Phillipé Tank veut faire de la pétanque avec vous..."
            android:padding="25dp"
            android:textSize="16sp"
            android:drawableRight="@drawable/petanque"
            />
    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button5"
            android:layout_width="68dp"
            android:layout_height="61dp"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Map"
            android:layout_margin="13dp"
            android:foreground="@drawable/__89319_flat_location_logo_simbolo_de_localizao_vermelho_clipart"
            android:foregroundTint="#B12020"
            android:onClick="maps"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="68dp"
            android:layout_height="61dp"
            android:backgroundTint="#FFFFFF"
            android:layout_margin="13dp"
            android:contentDescription=" "
            android:foreground="@drawable/basketball"
            android:foregroundTint="#B12020"
            android:onClick="events"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="68dp"
            android:layout_height="61dp"
            android:backgroundTint="#FFFFFF"
            android:layout_margin="13dp"
            android:contentDescription="Amis"
            android:foreground="@drawable/multiple_users_silhouette"
            android:onClick="friends"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="75dp"
            android:layout_height="71dp"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Parametres"
            android:layout_margin="13dp"
            android:foreground="@drawable/parametre"
            android:foregroundTint="#B12020"
            android:onClick="profile"/>
    </LinearLayout>
</RelativeLayout>
</LinearLayout>