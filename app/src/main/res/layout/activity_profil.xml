<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Mon Profil"
        android:textSize="30dp"
        android:fontFamily="@font/dm_bold"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/box">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/profile"/>
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="amis"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="15"
                android:textSize="20dp"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MES EVENEMENTS"
        android:textSize="25dp"
        android:fontFamily="@font/dm_bold"
        android:layout_marginTop="10dp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="410dp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button5"
            android:layout_width="68dp"
            android:layout_height="61dp"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Map"
            android:layout_margin="13dp"
            android:foreground="@drawable/__89319_flat_location_logo_simbolo_de_localizao_vermelho_clipart"
            android:foregroundTint="#B12020"
            android:onClick="maps"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="68dp"
            android:layout_height="61dp"
            android:backgroundTint="#FFFFFF"
            android:layout_margin="13dp"
            android:contentDescription=" "
            android:foreground="@drawable/basketball"
            android:foregroundTint="#B12020"
            android:onClick="events"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="68dp"
            android:layout_height="61dp"
            android:backgroundTint="#FFFFFF"
            android:layout_margin="13dp"
            android:contentDescription="Amis"
            android:foreground="@drawable/multiple_users_silhouette"
            android:onClick="friends"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="75dp"
            android:layout_height="71dp"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Parametres"
            android:layout_margin="13dp"
            android:foreground="@drawable/parametre"
            android:foregroundTint="#B12020"
           />
    </LinearLayout>

</RelativeLayout>