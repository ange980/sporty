<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".EvenementActivity">

    <android.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:queryHint="Search"
        android:iconifiedByDefault="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Evènements près de chez vous:"

        android:textSize="18sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:contentDescription="Evenements"
        android:background="#F3F0F0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#CCCCCC"
                    android:foreground="@drawable/basket"
                    android:scaleType="centerCrop"
                    android:src="@drawable/basket" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Match de basket"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="02/01/2023"
                    android:textColor="#555555"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Stade André Breton"
                    android:textColor="#777777"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#CCCCCC"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dance" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cours de danse"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="04/01/2023 au 11/01/2023"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cours pour les 10/11 ans"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#CCCCCC"
                    android:scaleType="centerCrop"
                    android:src="@drawable/yoga" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yoga vinyasa"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="05/02/2023"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Découvrez cette discipline"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Les news du sport:"
        android:textSize="18sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:contentDescription="Sports"
        android:background="#F3F0F0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#CCCCCC"
                    android:scaleType="centerCrop"
                    android:src="@drawable/jo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JO 2024"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="#CCCCCC"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sports" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quizz: Quel est ce sport?"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                android:layout_width="68dp"
                android:layout_height="61dp"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="Map"
                android:layout_margin="13dp"
                android:foreground="@drawable/__89319_flat_location_logo_simbolo_de_localizao_vermelho_clipart"
                android:foregroundTint="#B12020"
                android:onClick="maps"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="68dp"
                android:layout_height="61dp"
                android:backgroundTint="#FFFFFF"
                android:layout_margin="13dp"
                android:contentDescription=" "
                android:foreground="@drawable/basketball"
                android:foregroundTint="#B12020"
                android:onClick="events"/>

            <Button
                android:id="@+id/button7"
                android:layout_width="68dp"
                android:layout_height="61dp"
                android:backgroundTint="#FFFFFF"
                android:layout_margin="13dp"
                android:contentDescription="Amis"
                android:foreground="@drawable/multiple_users_silhouette"
                android:onClick="friends"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="75dp"
                android:layout_height="71dp"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="Parametres"
                android:layout_margin="13dp"
                android:foreground="@drawable/parametre"
                android:foregroundTint="#B12020"
                android:onClick="profile"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Additional views or components can be added here -->

</LinearLayout>
